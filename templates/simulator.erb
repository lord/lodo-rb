<html>
  <head>
    <style>
      body {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        padding: 20px;
      }

      .row:after, .color-selector:after, .palette-container:after {
        content: '';
        display: block;
        clear: both;
      }

      .square {
        float: left;
        height: 25px;
        width: 25px;
        background-color: #000;
        border: 1px solid #FFF;
        border-width: 0px 0px 1px 1px;
      }

      .hint {
        color: #aaa;
        font-size: 0.6em;
        max-width: 500px;
        line-height: 1.3;
      }
    </style>

    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script>
      "use strict";

      function updateBoard() {
        $.ajax({
          url: '/lights',
          dataType: 'json',
          success: function(data) {
            $(".square").each(function() {
              var red = data[$(this).data('id')]['r']
              var green = data[$(this).data('id')]['g']
              var blue = data[$(this).data('id')]['b']
              $(this).css("background-color", "rgb(" + red + "," + green + "," + blue + ")");
            });
            setTimeout(updateBoard);
          }
        });
      }
      $(function() {
        updateBoard();
      });
    </script>
  </head>
  <body>
    <div id="board">
      <% 9.times do |y| %>
        <div class="row">
          <% 9.times do |x| %>
            <div class="square" data-id="<%=
              if x % 2 == 0
                (8 - x) * 9 + (8 - y) + 16
              else
                (8 - x) * 9 + (y) + 16
              end
            %>"></div>
          <% end %>
        </div>
      <% end %>
    </div>
    <p class="hint">The board above represents the current state of the simulated board.</p>
  </body>
</html>
